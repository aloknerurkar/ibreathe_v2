<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Profile"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>


    <com.rey.material.widget.EditText
        android:theme="@style/Material.Widget.EditText.Light"
        android:id="@+id/name_profile"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:hint="Name"
        android:textColor="#FF000000"
        android:layout_marginRight="20dp"
        android:inputType="textPersonName"
        app:et_inputId="@+id/name_profile_field"
        app:et_dividerColor="@drawable/color_label"
        app:et_supportMode="none"
        app:et_labelEnable="true"
        app:et_labelTextColor="@drawable/color_label"/>

    <com.rey.material.widget.EditText
        android:theme="@style/Material.Widget.EditText.Light"
        android:id="@+id/email_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF000000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textEmailAddress"
        android:hint="Email"
        app:et_inputId="@+id/email_register_field"
        app:et_supportMode="none"
        app:et_labelEnable="true"
        app:et_labelTextColor="@drawable/color_label"
        app:et_dividerColor="@drawable/color_label"/>

    <com.rey.material.widget.EditText
        android:theme="@style/Material.Widget.EditText.Light"
        android:id="@+id/address_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF000000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textPostalAddress"
        android:hint="Address"
        app:et_inputId="@+id/address_register_field"
        app:et_supportMode="none"
        app:et_labelEnable="true"
        app:et_labelTextColor="@drawable/color_label"
        app:et_dividerColor="@drawable/color_label"/>


    <Button
        android:id="@+id/signup_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textStyle="bold"
        android:background="#ff000000"
        android:text="Next"
        android:textColor="#fffcf6ff"
        style="@android:style/Theme.Holo.Light.NoActionBar"
        android:typeface="monospace" />

</LinearLayout>


