<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mugs.mugs_v1.home.NotificationsFragment">

    <ListView android:id="@+id/myEventsList" android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView android:id="@+id/myEventsEmptyTv" android:layout_width="match_parent"
        android:layout_height="match_parent" android:gravity="center" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/createEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/ic_event_available_black_36dp"
        app:fabSize="normal"
        app:backgroundTint="@color/colorPrimary"/>

</FrameLayout>
